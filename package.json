{
  "name": "@ifjkt/nest-oidc",
  "version": "10.3.0",
  "description": "An OIDC authentication module for NestJS APIs",
  "homepage": "https://github.com/ifjkt/nest-oidc#readme",
  "author": "Tamas Kiss <ifjkisstamas@outlook.com>",
  "private": false,
  "license": "MIT",
  "keywords": [
    "nest",
    "nestjs",
    "nest.js",
    "oidc",
    "sso"
  ],
  "main": "dist/index.js",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "rm -rf dist && npm run build && npm run test:e2e",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --runInBand --config=jest-e2e.config.js",
    "test:e2e:cov": "jest --coverage --runInBand --config=jest-e2e.config.js",
    "version": "npm run changelog && git add CHANGELOG.md",
    "postversion": "npm run publish:git && npm run publish:npm",
    "publish:git": "git push && git push --tags",
    "publish:npm": "npm run build && npm publish --access public",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0"
  },
  "dependencies": {
    "@nestjs/axios": "^3.0.3",
    "@nestjs/config": "^3.2.3",
    "axios": "^1.7.7",
    "dotenv": "^16.4.5",
    "jsonwebtoken": "^9.0.2",
    "jwks-rsa": "^3.1.0",
    "reflect-metadata": "^0.2.2"
  },
  "peerDependencies": {
    "@apollo/gateway": "^2.9.2",
    "@nestjs/common": "^10.4.0",
    "@nestjs/core": "^10.4.0",
    "@nestjs/graphql": "^12.2.0",
    "@nestjs/jwt": "^10.2.0",
    "@nestjs/passport": "^10.0.3",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "reflect-metadata": "^0.2.2"
  },
  "peerDependenciesMeta": {
    "@apollo/gateway": {
      "optional": true
    },
    "@nestjs/graphql": {
      "optional": true
    }
  },
  "devDependencies": {
    "@nestjs/cli": "^10.4.0",
    "@nestjs/common": "^10.4.0",
    "@nestjs/core": "^10.4.0",
    "@nestjs/graphql": "^12.2.0",
    "@nestjs/jwt": "^10.2.0",
    "@nestjs/passport": "^10.0.3",
    "@nestjs/platform-express": "^10.4.0",
    "@nestjs/schematics": "^10.1.4",
    "@nestjs/testing": "^10.4.0",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.13",
    "@types/node": "^20.16.0",
    "@types/passport-jwt": "^4.0.1",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^8.8.1",
    "@typescript-eslint/parser": "^8.8.1",
    "conventional-changelog-cli": "^5.0.0",
    "eslint": "^9.12.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "jest": "^29.7.0",
    "prettier": "^3.3.3",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "~5.6.3"
  },
  "jest": {
    "setupFiles": [
      "dotenv/config"
    ],
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
